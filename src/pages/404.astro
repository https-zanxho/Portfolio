---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';

const isES = Astro.url.pathname.startsWith('/es/');
const lang = isES ? 'es' : 'en';

const title = isES ? '404 – Página no encontrada' : '404 – Page not found';
const desc  = isES ? 'La página que buscas no existe o fue remplazada.' : 'The page you are looking for doesn’t exist or has moved.';
const home  = isES ? '/es/' : '/en';
const projects = isES ? '/es/portfolio/' : '/en/portfolio/'; // cambia a /projects/ si esa es tu ruta
---

<html lang={lang} data-theme="dark" class="dark">
  <head>
    <BaseHead title={title} description={desc} />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-6xl px-4 py-16">
      <section class="card-surface p-8 text-center space-y-4">
        <h1 class="text-4xl font-bold text-[color:var(--color-text-primary)]">404</h1>
        <p class="text-lg text-[color:var(--color-text-secondary)]">{desc}</p>
        <div class="mt-4 flex items-center justify-center gap-3">
          <a href={home} class="sw-btn">{isES ? 'Volver al inicio' : 'Go to Home'}</a>
          <a href={projects} class="sw-btn">{isES ? 'Ver mis proyectos' : 'See my Projects'}</a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>

